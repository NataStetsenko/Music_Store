<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Music_Store</title>
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Music_Store.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style=" background-color: #071321; color:aliceblue">
                @if (Context.Session.GetString("login") == null && Context.Session.GetString("Level") == "0")
                {
                    string temp = Context.Session.GetString("login");
                    <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Musics" asp-action="Index">Music Store</a>
                }
                else
                {
                    string temp = Context.Session.GetString("login");
                    <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Musics" asp-action="Index2">Music Store</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("login") == null)
                        {

                            <li class="nav-item">
                                <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Users" asp-action="Sing">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Users" asp-action="Create">Регистрация</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") == "admin")
                        {
                            <li class="nav-item">
                                <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Musics" asp-action="Create">Добавить клип</a>
                            </li>
                            <li class="nav-item">
                                <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Users" asp-action="AllUsers">Все участники</a>
                            </li>
                            <li class="nav-item">
                                <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="MusicStyles" asp-action="Index">Стили</a>
                            </li>
                            <li class="nav-item">
                                <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Singers" asp-action="Index">Исполнители</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") != null && Context.Session.GetString("Level") == "1" && Context.Session.GetString("Level") != null)
                        {
                            <li class="nav-item">
                                <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Musics" asp-action="Create">Добавить клип</a>
                            </li>

                        }
                    </ul>
                </div>
                @if (Context.Session.GetString("login") != null)
                {
                    <a style="color:aliceblue" class="navbar-brand" asp-area="" asp-controller="Musics" asp-action="Index">Выход</a>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="~/js/jquery-ui-1.12.1.js"> </script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

